# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /                           controllers.Application.authenticate()
GET     /loggedIn                   controllers.Application.loggedIn()
GET     /signUp                     controllers.Signup.register()
POST    /signUp                     controllers.Signup.authenticate()
GET     /about                      controllers.About.display()
GET     /loggedout                  controllers.Application.logout()
GET     /blog                       controllers.Blog.display()
GET     /services                   controllers.Services.display()
GET     /books                      controllers.Books.display()

GET     /fa/                        controllers.Application.FaIndex()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
