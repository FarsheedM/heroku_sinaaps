# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /                           controllers.Application.authenticate()
GET     /loggedIn                   controllers.Application.loggedIn()
GET     /signUp                     controllers.Signup.register()
POST    /signUp                     controllers.Signup.authenticate()
GET     /about                      controllers.About.display()
GET     /loggedout                  controllers.Application.logout()
GET     /blog/:lang                 controllers.Blog.display(lang : String)
GET     /blog/:lang/postid=:postId         controllers.Blog.showBlogPostFullContent(lang : String,postId : Integer)
GET     /services                   controllers.Services.display()
GET     /books                      controllers.Books.display()
#
GET     /fa/                        controllers.controllersFarsi.ApplicationFa.index()
GET     /fa/signUp                  controllers.controllersFarsi.Signup.register()
POST    /fa/signUp                  controllers.controllersFarsi.Signup.authenticate()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
